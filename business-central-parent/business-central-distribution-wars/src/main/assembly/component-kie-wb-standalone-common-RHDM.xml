<component xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.3 http://maven.apache.org/xsd/component-1.1.3.xsd">
  <!-- Assembly configuration for WildFly 10 and EAP 7, shared between the community and product assemblies. -->
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.kie:${artifactId}-webapp:jar:thorntail</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>_bootstrap/${artifactId}-webapp.war</exclude>
        </excludes>
      </unpackOptions>
      <useStrictFiltering>true</useStrictFiltering>
    </dependencySet>
  </dependencySets>

  <files>

    <file>
      <source>${project.basedir}/target/business-central-${version.org.kie}-eap7-redhat.war</source>
      <outputDirectory>_bootstrap</outputDirectory>
      <destName>business-central-webapp.war</destName>
    </file>

    <file>
      <source>${project.parent.basedir}/src/main/productized/standalone/project-defaults.yml</source>
      <outputDirectory>.</outputDirectory>
      <destName>project-defaults.yml</destName>
    </file>
  </files>
</component>
