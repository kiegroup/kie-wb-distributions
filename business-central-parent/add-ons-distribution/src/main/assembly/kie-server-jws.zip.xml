<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>kie-server-jws</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${kie-server-webc.staging.dir}</directory>
            <outputDirectory>/kie-server.war</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources/security-policy</directory>
            <outputDirectory>/SecurityPolicy/</outputDirectory>
            <includes>
                <include>*.policy</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
</assembly>
