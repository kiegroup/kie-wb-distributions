  </servlet>
  <servlet-mapping>
    <servlet-name>DTableXLSFileServlet</servlet-name>
    <url-pattern>/org.kie.workbench.drools.KIEDroolsWebapp/dtablexls/file</url-pattern>
  </servlet-mapping>
  
  <servlet>
